<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	android:background="#000000">

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="top|center"
		android:layout_gravity="center">

		<ImageView
			android:layout_width="match_parent"
			android:layout_height="250dp"
			android:id="@+id/mainButton1"
			android:background="@drawable/image_1"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_below="@id/mainButton1"
			android:gravity="center"
			android:id="@+id/bmusic"
			android:background="@drawable/image_3"
			android:text="Birthday Song"
			android:shadowColor="#FF76C57F"
			android:shadowRadius="4"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@id/bmusic"
			android:gravity="bottom"
			android:background="@drawable/image_2">

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#FFE01B6C">

					<Button
						android:layout_width="100dp"
						android:layout_height="50dp"
						android:text="Wish 1"
						android:layout_marginLeft="10dp"
						android:background="@drawable/image_4"
						android:id="@+id/b1"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="50dp"
						android:text="Wish 2"
						android:layout_marginLeft="10dp"
						android:background="@drawable/image_4"
						android:id="@+id/b2"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="50dp"
						android:text="Wish 3"
						android:layout_marginLeft="10dp"
						android:background="@drawable/image_4"
						android:id="@+id/b3"/>

					<Button
						android:layout_width="100dp"
						android:layout_height="50dp"
						android:text="Wish 4"
						android:layout_marginLeft="10dp"
						android:background="@drawable/image_4"
						android:id="@+id/b4"/>

				</LinearLayout>

			</HorizontalScrollView>

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>

